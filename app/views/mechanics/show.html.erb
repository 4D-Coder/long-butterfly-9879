<header>
  <h2><%= @mechanic.name %>'s Information</h2>
</header>
<section id="mechanic_information">
  <p>Name: <%=  @mechanic.name %></p>
  <p>Years Experience: <%=  @mechanic.years_experience %></p>
</section>
<section id="mechanics_rides">
<h3><%=  @mechanic.name%>'s Rides</h3>
  <% @mechanic.rides.each do |ride| %>
    <p><%=  ride.name %></p>
  <% end %>
</section>  